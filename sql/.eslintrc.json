{
	"root": true,
	"env": {
		"browser": false,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:json/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"version": "detect",
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"ignorePatterns": ["node_modules", "dist", "build"],
	"plugins": ["@typescript-eslint", "json"],
	"rules": {
		"eol-last": ["error", "always"],
		"json/*": ["error", "allowComments"],
		"prefer-const": "error",
		"no-empty": "off",
		"no-empty-function": "off",
		"camelcase": "off",
		"no-mixed-spaces-and-tabs": "error",
		"linebreak-style": "off",
		"quotes": ["error", "double", { "avoidEscape": true }],
		"semi": ["error", "always"],
		"no-unused-vars": "off",
		"indent": "off",
		"no-case-declarations": "off",
		"array-bracket-newline": ["error", "consistent"],
		"array-element-newline": ["error", "consistent"],
		"no-sparse-arrays": "error",
		"comma-dangle": ["error", "never"],
		"@typescript-eslint/no-non-null-assertion": "off",
		"@typescript-eslint/indent": ["error", "tab", { "SwitchCase": 1, "ignoredNodes": [ "PropertyDefinition[decorators]", "TSUnionType" ]}],
		"@typescript-eslint/no-explicit-any": "off",
		"@typescript-eslint/no-empty-interface": "off",
		"@typescript-eslint/no-unused-vars": ["warn", { "args": "after-used" }],
		"@typescript-eslint/no-empty-function": "warn",
		"@typescript-eslint/no-inferrable-types": "off"
	}
}
